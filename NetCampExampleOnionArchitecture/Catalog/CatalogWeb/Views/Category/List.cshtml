@model List<Catalog.DataAccess.Category>
@{
    ViewData["Title"] = "List";
}

<h1>Kategori Listesi <a class="btn btn-info float-right" asp-controller="Category" asp-action="Insert">Ekle</a></h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th style="text-align:center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-info float-left" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-info float-right" style="margin-left:5px;" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
