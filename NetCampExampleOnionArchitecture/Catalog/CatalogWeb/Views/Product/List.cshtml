@model List<Catalog.DataAccess.Product>
@{
    ViewData["Title"] = "Ürünler";
}

<h1>Ürün Listesi <a class="btn btn-info float-right" asp-controller="Product" asp-action="Insert">Ekle</a></h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Resim</th>
            <th>BrandId</th>
            <th>CategoryId</th>
            <th style="text-align:center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Image</td>
            <td>@item.BrandId</td>
            <td>@item.CategoryId</td>            
            <td>
                <a class="btn btn-info float-left" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-info float-right" style="margin-left:5px;" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>
