
@model List<NetCampWeb.Models.Entities.Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h1>Öğrenci Listesi <a class="btn btn-info float-right" asp-controller="Ogrenci" asp-action="Insert">Ekle</a></h1>
<table>
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Yaşı</th>
            <th style="text-align:center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KullaniciAdi</td>
                <td>@item.Adi</td>
                <td>@item.Soyadi</td>
                <td>@item.Yasi</td>
                @*<td>@Html.ActionLink("Düzenle", "Update", new { id = @item.Id }, new { @class = "btn btn-info float-right" })</td>*@ <!--C# ın kendi olusturdugu method olarak göndermek için-->
                <td>
                    <a class="btn btn-info float-left" asp-controller="Ogrenci" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-info float-right" style="margin-left:5px;" asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

